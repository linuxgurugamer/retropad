#include <windows.h>
#include "resource.h"

IDI_RETROPAD ICON "res/retropad.ico"

IDC_RETROPAD MENU
BEGIN
    POPUP "&File"
    BEGIN
        MENUITEM "&New\tCtrl+N",            IDM_FILE_NEW
        MENUITEM "&Open...\tCtrl+O",        IDM_FILE_OPEN
        MENUITEM "&Save\tCtrl+S",           IDM_FILE_SAVE
        MENUITEM "Save &As...",             IDM_FILE_SAVE_AS
        MENUITEM SEPARATOR
        MENUITEM "Page Set&up...",          IDM_FILE_PAGE_SETUP
        MENUITEM "&Print...\tCtrl+P",       IDM_FILE_PRINT
        MENUITEM SEPARATOR
        MENUITEM "&Settings...",            IDM_FILE_SETTINGS
        MENUITEM SEPARATOR
        MENUITEM "E&xit",                   IDM_FILE_EXIT
    END
    POPUP "&Edit"
    BEGIN
        MENUITEM "&Undo\tCtrl+Z",           IDM_EDIT_UNDO
        MENUITEM SEPARATOR
        MENUITEM "Cu&t\tCtrl+X",            IDM_EDIT_CUT
        MENUITEM "&Copy\tCtrl+C",           IDM_EDIT_COPY
        MENUITEM "&Paste\tCtrl+V",          IDM_EDIT_PASTE
        MENUITEM "&Delete\tDel",            IDM_EDIT_DELETE
        MENUITEM SEPARATOR
        MENUITEM "&Find...\tCtrl+F",        IDM_EDIT_FIND
        MENUITEM "Find &Next\tF3",          IDM_EDIT_FIND_NEXT
        MENUITEM "&Replace...\tCtrl+H",     IDM_EDIT_REPLACE
        MENUITEM "&Go To...\tCtrl+G",       IDM_EDIT_GOTO
        MENUITEM SEPARATOR
        MENUITEM "Select &All\tCtrl+A",     IDM_EDIT_SELECT_ALL
        MENUITEM "Time/&Date\tF5",          IDM_EDIT_TIME_DATE
    END
    POPUP "F&ormat"
    BEGIN
        MENUITEM "&Word Wrap",              IDM_FORMAT_WORD_WRAP
        MENUITEM "&Font...",                IDM_FORMAT_FONT
    END
    POPUP "&View"
    BEGIN
        MENUITEM "&Status Bar",             IDM_VIEW_STATUS_BAR, CHECKED
    END
    POPUP "&Help"
    BEGIN
        MENUITEM "View &Help",              IDM_HELP_VIEW_HELP
        MENUITEM "&About retropad",         IDM_HELP_ABOUT
    END
END

// Hex codes: 0x4E=N, 0x4F=O, 0x53=S, 0x50=P, 0x5A=Z, 0x58=X, 0x43=C, 0x56=V, 0x2E=Del, 0x46=F, 0x48=H, 0x47=G, 0x41=A
IDC_RETROPAD ACCELERATORS
BEGIN
    0x4E,       IDM_FILE_NEW,       VIRTKEY, CONTROL  // Ctrl+N - New file
    0x4F,       IDM_FILE_OPEN,      VIRTKEY, CONTROL  // Ctrl+O - Open file
    0x53,       IDM_FILE_SAVE,      VIRTKEY, CONTROL  // Ctrl+S - Save file
    0x50,       IDM_FILE_PRINT,     VIRTKEY, CONTROL  // Ctrl+P - Print
    0x5A,       IDM_EDIT_UNDO,      VIRTKEY, CONTROL  // Ctrl+Z - Undo
    0x58,       IDM_EDIT_CUT,       VIRTKEY, CONTROL  // Ctrl+X - Cut
    0x43,       IDM_EDIT_COPY,      VIRTKEY, CONTROL  // Ctrl+C - Copy
    0x56,       IDM_EDIT_PASTE,     VIRTKEY, CONTROL  // Ctrl+V - Paste
    0x2E,       IDM_EDIT_DELETE,    VIRTKEY           // Delete - Delete selected text
    0x46,       IDM_EDIT_FIND,      VIRTKEY, CONTROL  // Ctrl+F - Find
    0x72,       IDM_EDIT_FIND_NEXT, VIRTKEY           // F3 - Find next
    0x48,       IDM_EDIT_REPLACE,   VIRTKEY, CONTROL  // Ctrl+H - Replace
    0x47,       IDM_EDIT_GOTO,      VIRTKEY, CONTROL  // Ctrl+G - Go to line
    0x41,       IDM_EDIT_SELECT_ALL,VIRTKEY, CONTROL  // Ctrl+A - Select all
    0x74,       IDM_EDIT_TIME_DATE, VIRTKEY           // F4 - Insert time/date
END

